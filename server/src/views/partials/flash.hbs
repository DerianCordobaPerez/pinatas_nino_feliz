{{#each messages.error}}
<div class="alert alert-success mt-4 d-flex align-items-center" role="alert">
    {{{this}}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}

{{#each messages.success}}
<div class="alert alert-success mt-4 d-flex align-items-center" role="alert">
    {{{this}}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}